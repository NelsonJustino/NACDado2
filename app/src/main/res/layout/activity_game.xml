<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#197F00"
    tools:context="nelsonjustinodasilvasantos.com.br.nacdado.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:text="@string/vitorias" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:text="@string/empates" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:text="@string/derrotas" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomedojogador"
            android:textColor="#fff"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPlayer"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dice_1" />

            <ImageView
                android:id="@+id/ivPC"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dice_2" />
        </LinearLayout>

        <Button
            android:id="@+id/btJogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jogar"
            android:padding="12dp"/>
    </LinearLayout>
</>
